{
  "name": "trip-app functions tools",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/deno:2": {
      "version": "1.46.3"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "customizations": {
    "vscode": {
      "extensions": ["denoland.vscode-deno", "supabase.vscode-supabase"],
      "settings": {
        "deno.enable": true,
        "deno.lint": true,
        "deno.unstable": true
      }
    }
  },
  "workspaceFolder": "/workspaces/trip-app",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/trip-app,type=bind",
  "remoteUser": "vscode"
}
