{
  "name": "Trip App - Deno Backend",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "runArgs": ["-p", "0.0.0.0:8000:8000"],
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "customizations": {
    "vscode": {
      "extensions": ["denoland.vscode-deno", "supabase.vscode-supabase"],
      "settings": {
        "deno.enable": true,
        "deno.lint": true,
        "deno.unstable": true,
        "deno.enablePaths": ["supabase/functions"]
      }
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Deno Backend",
      "protocol": "http"
    }
  },
  "workspaceFolder": "/workspaces/trip-app",
  "remoteUser": "vscode"
}
